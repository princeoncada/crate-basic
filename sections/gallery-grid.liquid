<section class="gallery-section">
  <div class="gallery-grid">
    {% for block in section.blocks %}
    <div class="gallery-item">
      <img src="{{ block.settings.image | img_url: '500x500' }}" alt="Gallery image">
    </div>
    {% endfor %}
  </div>
</section>

<style>
  .gallery-section {
    padding: 40px 20px; /* Padding around the entire gallery */
  }

  .gallery-grid {
    display: grid;
    gap: 30px; /* Space between grid items */
  }

  @media (min-width: 1440px) {
    .gallery-grid {
      grid-template-columns: repeat(4, 1fr); /* 4 columns for desktop (1440px and above) */
    }
  }

  @media (min-width: 768px) and (max-width: 1439px) {
    .gallery-grid {
      grid-template-columns: repeat(2, 1fr); /* 2 columns for tablets (768px to 1439px) */
      gap: 25px;
    }
  }

  @media (min-width: 390px) and (max-width: 767px) {
    .gallery-grid {
      grid-template-columns: 1fr; /* 1 column for mobile (390px to 767px) */
      gap: 20px;
    }
  }

  @media (max-width: 389px) {
    .gallery-grid {
      grid-template-columns: 1fr; /* 1 column for very small devices */
      gap: 15px;
    }
  }

  .gallery-item {
    width: 100%; /* Make the item take full width of its grid cell */
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .gallery-item img {
    width: 300px; /* Fixed width for the image */
    height: 300px; /* Fixed height for the image */
    object-fit: cover; /* Ensures the image maintains aspect ratio */
    border-radius: 10px; /* Adds a bit of rounding to the corners */
  }
</style>

