<section class="gallery-section" style="padding: 40px 20px;">
  <div class="gallery-grid">
    {% for block in section.blocks %}
    <div class="gallery-item" style="border: {{ block.settings.border }}; border-radius: {{ block.settings.border_radius }}; box-shadow: {{ block.settings.box_shadow }};">
      <img src="{{ block.settings.image | img_url: '500x500' }}" alt="Gallery image" 
           style="width: {{ block.settings.image_width }}; height: {{ block.settings.image_height }}; object-fit: cover; border-radius: {{ block.settings.image_border_radius }};">
    </div>
    {% endfor %}
  </div>
</section>

<style>
  .gallery-grid {
    display: grid;
    gap: 30px; /* Space between grid items */
    grid-template-columns: repeat(4, minmax(0, 1fr)); /* Default to 4 columns */
  }

  @media (max-width: 1439px) {
    .gallery-grid {
      grid-template-columns: repeat(2, minmax(0, 1fr)); /* 2 columns for tablets */
    }
  }

  @media (max-width: 767px) {
    .gallery-grid {
      grid-template-columns: repeat(1, minmax(0, 1fr)); /* 1 column for mobile */
    }
  }

  .gallery-item {
    display: flex;
    justify-content: center;
    align-items: center;
  }
</style>

{% schema %}
{
  "name": "Responsive Gallery Grid",
  "settings": [
    {
      "type": "text",
      "id": "image_width",
      "label": "Default Image Width",
      "default": "300px",
      "info": "Enter the default width of the gallery images. Example: 300px or 50%"
    },
    {
      "type": "text",
      "id": "image_height",
      "label": "Default Image Height",
      "default": "300px",
      "info": "Enter the default height of the gallery images. Example: 300px or 50%"
    }
  ],
  "blocks": [
    {
      "type": "image_block",
      "name": "Gallery Image",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Upload Image",
          "info": "Select an image for the gallery."
        },
        {
          "type": "text",
          "id": "image_width",
          "label": "Image Width",
          "default": "300px",
          "info": "Enter the width of this image. Example: 300px or 50%"
        },
        {
          "type": "text",
          "id": "image_height",
          "label": "Image Height",
          "default": "300px",
          "info": "Enter the height of this image. Example: 300px or 50%"
        },
        {
          "type": "text",
          "id": "image_border_radius",
          "label": "Image Border Radius",
          "default": "10px",
          "info": "Enter the border radius for this image. Example: 10px"
        },
        {
          "type": "text",
          "id": "border",
          "label": "Border",
          "default": "none",
          "info": "Enter border style for the image container. Example: 1px solid #ddd"
        },
        {
          "type": "text",
          "id": "box_shadow",
          "label": "Box Shadow",
          "default": "none",
          "info": "Enter box shadow style for the image container. Example: 0px 4px 8px rgba(0,0,0,0.1)"
        },
        {
          "type": "text",
          "id": "border_radius",
          "label": "Container Border Radius",
          "default": "10px",
          "info": "Enter border radius for the container. Example: 10px"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Gallery Grid",
      "category": "Custom Sections",
      "blocks": [
        {
          "type": "image_block"
        }
      ]
    }
  ]
}
{% endschema %}
