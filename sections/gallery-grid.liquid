<section class="gallery-section" style="padding: 40px 20px;">
  <div class="gallery-grid">
    {% for block in section.blocks %}
    <div class="gallery-item">
      <img src="{{ block.settings.image | img_url: '500x500' }}" alt="Gallery image" 
           style="width: {{ section.settings.image_width }}; height: {{ section.settings.image_height }}; object-fit: cover; border-radius: 10px;">
    </div>
    {% endfor %}
  </div>
</section>

<style>
  .gallery-grid {
    display: grid;
    gap: 30px; /* Space between grid items */
    grid-template-columns: repeat(4, minmax(0, 1fr)); /* 4 columns by default */
  }

  @media (max-width: 1439px) {
    .gallery-grid {
      grid-template-columns: repeat(2, minmax(0, 1fr)); /* 2 columns for tablets */
    }
  }

  @media (max-width: 767px) {
    .gallery-grid {
      grid-template-columns: repeat(1, minmax(0, 1fr)); /* 1 column for mobile */
    }
  }

  .gallery-item {
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .gallery-item img {
    width: 300px; /* Fixed width for the image */
    height: 300px; /* Fixed height for the image */
    object-fit: cover; /* Ensures the image maintains aspect ratio */
    border-radius: 10px; /* Adds a bit of rounding to the corners */
  }
</style>

{% schema %}
{
  "name": "Responsive Gallery Grid",
  "settings": [
    {
      "type": "text",
      "id": "image_width",
      "label": "Image Width",
      "default": "300px",
      "info": "Enter the width of the gallery images. Example: 300px or 50%"
    },
    {
      "type": "text",
      "id": "image_height",
      "label": "Image Height",
      "default": "300px",
      "info": "Enter the height of the gallery images. Example: 300px or 50%"
    }
  ],
  "blocks": [
    {
      "type": "image_block",
      "name": "Gallery Image",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Upload Image",
          "info": "Select an image for the gallery."
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Gallery Grid",
      "category": "Custom Sections",
      "blocks": [
        {
          "type": "image_block"
        }
      ]
    }
  ]
}
{% endschema %}
