<section class="gallery-section" style="padding: 40px 20px;">
  <div class="gallery-container" style="overflow-x: auto; overflow-y: hidden; white-space: nowrap; padding-bottom: 20px;">
    <div class="gallery-grid" style="display: flex; gap: 30px;">
      {% for block in section.blocks %}
      <div class="gallery-item" style="flex: 0 0 auto; display: flex; justify-content: center; align-items: center;">
        <img src="{{ block.settings.image | img_url: '500x500' }}" alt="Gallery image" 
             style="width: {{ section.settings.image_width }}; height: {{ section.settings.image_height }}; object-fit: cover; border-radius: 10px;">
      </div>
      {% endfor %}
    </div>
  </div>
</section>

<style>
  .gallery-container {
    overflow-x: auto; /* Enables horizontal scrolling */
    overflow-y: hidden; /* Hides vertical scrollbar */
    white-space: nowrap; /* Prevents wrapping of grid items */
    padding-bottom: 20px; /* Optional: Adds space at the bottom for better scrolling visibility */
  }

  .gallery-grid {
    display: flex; /* Horizontal layout */
    gap: 30px; /* Space between grid items */
  }

  @media (min-width: 1440px) {
    .gallery-item {
      flex: 0 0 auto; /* Ensures item size */
    }
  }

  @media (min-width: 768px) and (max-width: 1439px) {
    .gallery-item {
      flex: 0 0 auto; /* Ensures item size */
    }
  }

  @media (max-width: 767px) {
    .gallery-item {
      flex: 0 0 auto; /* Ensures item size */
    }
  }

  .gallery-item {
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .gallery-item img {
    width: 300px; /* Fixed width for the image */
    height: 300px; /* Fixed height for the image */
    object-fit: cover; /* Ensures the image maintains aspect ratio */
    border-radius: 10px; /* Adds a bit of rounding to the corners */
  }
</style>

{% schema %}
{
  "name": "Responsive Gallery Grid",
  "settings": [
    {
      "type": "text",
      "id": "image_width",
      "label": "Image Width",
      "default": "300px",
      "info": "Enter the width of the gallery images. Example: 300px or 50%"
    },
    {
      "type": "text",
      "id": "image_height",
      "label": "Image Height",
      "default": "300px",
      "info": "Enter the height of the gallery images. Example: 300px or 50%"
    }
  ],
  "blocks": [
    {
      "type": "image_block",
      "name": "Gallery Image",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Upload Image",
          "info": "Select an image for the gallery."
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Gallery Grid",
      "category": "Custom Sections",
      "blocks": [
        {
          "type": "image_block"
        }
      ]
    }
  ]
}
{% endschema %}
