<section class="gallery-section">
  <div class="gallery-grid">
    {% for block in section.blocks %}
    <div class="gallery-item">
      <img src="{{ block.settings.image | img_url: '500x' }}" alt="Gallery image">
    </div>
    {% endfor %}
  </div>
</section>

{% style %}
<section class="gallery-section">
  <div class="gallery-grid">
    {% for block in section.blocks %}
    <div class="gallery-item">
      <img src="{{ block.settings.image | img_url: '500x' }}" alt="Gallery image">
    </div>
    {% endfor %}
  </div>
</section>

<style>
  .gallery-section {
    padding: 40px 20px; /* Padding for the section */
  }

  .gallery-grid {
    display: grid;
    gap: 30px; /* Gap between grid items */
  }

  @media (min-width: 1440px) {
    .gallery-grid {
      grid-template-columns: repeat(4, 1fr);
    }
  }

  @media (min-width: 768px) and (max-width: 1439px) {
    .gallery-grid {
      grid-template-columns: repeat(2, 1fr); 
      gap: 25px; 
    }
  }

  @media (min-width: 390px) and (max-width: 767px) {
    .gallery-grid {
      grid-template-columns: 1fr;
      gap: 20px; 
    }
  }

  .gallery-item img {
    width: 100%;
    height: auto;
    object-fit: cover;
    border-radius: 10px; /* Add a bit of rounding to the image corners */
  }
</style>

{% endstyle %}
