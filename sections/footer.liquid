<section class="x-bg-[#3D3E49]">
    <div class="x-hidden mdt:x-flex x-flex-row x-justify-center x-items-center x-text-[rgb(224,224,224)] x-max-w-[1440px] x-mx-auto x-pt-[64px] md:x-pt-[80px] x-pb-[104px] x-px-[24px] md:x-px-[104px]">
        <div class="x-flex x-flex-row x-justify-between x-w-full">
            <div class="x-flex x-flex-col x-gap-[32px]">
                <div>
                    {% render 'a-crate-logo-footer' %}
                </div>
                <div class="x-flex x-flex-col x-gap-[8px] x-text-[14px] x-leading-[20px]">
                    <p>© 2024. All rights reserved.</p>
                    <div class="x-flex x-flex-row x-gap-[16px]">
                        <a href={{ section.settings.terms_link }}>Terms</a>
                        <a href={{ section.settings.privacy_link }}>Privacy</a>
                        <a href={{ section.settings.return_link }}>Return Policy</a>
                    </div>
                </div>
            </div>

            <div class="x-flex x-flex-row x-gap-[80px]">
                <div class="x-flex x-flex-col x-gap-[16px]">
                    <h1 class="x-font-jost x-text-[#E0E0E0]">SHOP</h1>
                    <div class="x-flex x-flex-col x-gap-[8px]">
                        <a href={{ section.settings.product_link }}>Rectangular</a>
                        <a href={{ section.settings.product_link }}>Square</a>
                    </div>
                </div>
                <div class="x-flex x-flex-col x-gap-[16px]">
                    <h1 class="x-font-jost x-text-[#E0E0E0]">USERS</h1>
                    <div class="x-flex x-flex-col x-gap-[8px]">
                        <a href={{ routes.account_url }}>Account</a>
                        <a href={{ routes.cart_url }}>Cart</a>
                    </div>
                </div>
                <div class="x-flex x-flex-col x-gap-[16px]">
                    <h1 class="x-font-jost x-text-[#E0E0E0]">COMPANY</h1>
                    <div class="x-flex x-flex-col x-gap-[8px]">
                        <a href={{ section.settings.story_link }}>Story</a>
                        <a href={{ settings.social_instagram_link }}><i class='bx bxl-instagram x-text-[20px]'></i></a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="x-flex mdt:x-hidden x-flex-col x-gap-[64px] x-py-[64px] x-px-[24px] x-text-[rgb(224,224,224)] ">
        <div>
            {% render 'a-crate-logo-footer' %}
        </div>
        <div class="x-flex x-flex-col x-gap-[32px] x-font-normal">
            <div class="x-flex x-flex-row x-gap-[64px]">
                <div class="x-flex x-flex-col x-gap-[16px] x-min-w-[100px]">
                    <p class="x-text-[#E0E0E0] x-text-[16px] x-leading-[24px]">SHOP</p>
                    <div class="x-flex x-flex-col x-gap-[16px] x-text-[18px] x-leading-[24px]">
                        <a href={{ section.settings.product_link }}>Rectangular</a>
                        <a href={{ section.settings.product_link }}>Square</a>
                    </div>
                </div>
                <div class="x-flex x-flex-col x-gap-[16px]">
                    <p class="x-text-[#E0E0E0] x-text-[16px] x-leading-[24px]">USERS</p>
                    <div class="x-flex x-flex-col x-gap-[16px] x-text-[18px] x-leading-[24px]">
                        <a href={{ routes.account_url }}>Account</a>
                        <a href={{ routes.cart_url }}>Cart</a>
                    </div>
                </div>
            </div>

            <div class="x-flex x-flex-row x-gap-[64px]">
                <div class="x-flex x-flex-col x-gap-[16px] x-min-w-[100px]">
                    <p class="x-text-[#E0E0E0] x-text-[16px] x-leading-[24px]">SHOP</p>
                    <div class="x-flex x-flex-col x-gap-[16px] x-text-[18px] x-leading-[24px]">
                        <a href={{ section.settings.story_link }}>Story</a>
                        <a href={{ settings.social_instagram_link }}><i class='bx bxl-instagram x-text-[20px]'></i></a>
                    </div>
                </div>
                <div class="x-flex x-flex-col x-justify-end">
                    <div class="x-flex x-flex-col x-gap-[16px] x-text-[18px] x-leading-[24px]">
                        <a href={{ section.settings.terms_link }}>Terms</a>
                        <a href={{ section.settings.privacy_link }}>Privacy</a>
                        <a href={{ section.settings.return_link }}>Return Policy</a>
                    </div>
                </div>
            </div>

            <hr class="x-bg-[#E0E0E0] x-h-[1px]">

            <p class="x-text-[16px] x-leading-[20px]">© 2024. All rights reserved.</p>
        </div>
    </div>
</section>

{% schema %}
    {
      "name": "Footer",
      "settings": [
        {
          "type": "url",
          "id": "story_link",
          "label": "Story Link"
        },
        {
          "type": "url",
          "id": "product_link",
          "label": "Product Link"
        },
        {
            "type": "url",
            "id": "terms_link",
            "label": "Terms Link"
        },
        {
            "type": "url",
            "id": "privacy_link",
            "label": "Privacy Link"
        },
        {
            "type": "url",
            "id": "return_link",
            "label": "Return Link"
        }
      ],
      "presets": []
    }
    {% endschema %}

    